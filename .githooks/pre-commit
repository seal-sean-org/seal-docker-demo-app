#!/usr/bin/env bash
# Pre-commit hook: prevent commits containing emoji characters
# To enable: git config core.hooksPath .githooks

# Get list of staged files
files=$(git diff --cached --name-only --diff-filter=ACMR)
if [ -z "$files" ]; then
  exit 0
fi

# Python check for emoji characters
python3 - <<'PY'
import sys, subprocess, re
pattern = re.compile(r"[\U0001F300-\U0001F64F\U0001F680-\U0001F6FF\U0001F1E0-\U0001F1FF\U00002702-\U000027B0\U000024C2-\U0001F251]")
files = subprocess.check_output(['git','diff','--cached','--name-only','--diff-filter=ACMR']).decode().strip().splitlines()
violations = []
for f in files:
    try:
        with open(f, 'r', encoding='utf-8') as fh:
            text = fh.read()
    except Exception:
        continue
    if pattern.search(text):
        violations.append(f)

if violations:
    print('Emoji detected in staged files:')
    for v in violations:
        print('  -', v)
    print('\nPlease remove emoji characters before committing. To bypass, temporarily disable the hook or update files.\n')
    sys.exit(1)
else:
    sys.exit(0)
PY

exit_code=$?
if [ $exit_code -ne 0 ]; then
  echo "Commit aborted due to emoji in staged files."
  exit $exit_code
fi

exit 0
